            <header class="card-header">
                <p class="card-header-title">

                    <%= bankcard.region %>
                </p>
            </header>
            <div class="content">
                <p> <a href=" /bankcard/read/<%= bankcard.id %> ">
                        <content style="font-size: x-large ;"> 卡号 ： <%= bankcard.id %></content>
                    </a> </p>
                <content>持卡人 ：<%= bankcard.owner %></content>
                <br>
                <br>
                <p> 余额 : ￥<%= parseFloat(bankcard.balances).toLocaleString() %></p>

            </div>

        </div>
        <br>
        <% } %>
        <% }); %>
