<% var region_list=["深圳", "广州", "东莞"] %>

    <!-- 第一列 -->
<div class="columns">
    <div class="column is-one-third">
        <% bankcards.forEach( function(bankcard) { %>
        <% if (bankcard.region == region_list[0]) { %>
        <!-- <div class="column is-half-mobile card"> -->
